<UserControl x:Class="WpfApp1.Views.SignInView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Width="300" Height="150" >
            <StackPanel Background="LightGray" Width="300" Height="150"
                        HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBox Text="{Binding Id}"
                         FontSize="14" Padding="10 5"
                         Width="200" Margin="10 10 10 0" />
                <TextBox Text="{Binding Password}"
                         FontSize="14" Padding="10 5"
                         Width="200" Margin="10 0 10 10"/>
                <Button Content="로그인"
                        Command="{Binding SignInCommand}"
                        Width="200" Margin="5" />
                <TextBlock Text="{Binding LoginMessage}" 
                           HorizontalAlignment="Center"
                           Foreground="Red"  Margin="10" />
            </StackPanel>
        </Border>
        
    </Grid>
</UserControl>
